{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "StoragePath": "Data/Snapshots",
  "SnapshotStorage": {
    "Provider": "Local",
    "LocalPath": "Data/Snapshots",
    "S3": {
      "Bucket": "",
      "Region": "us-east-1",
      "Endpoint": "",
      "AccessKey": "",
      "SecretKey": "",
      "UsePathStyle": true,
      "Prefix": "snapshots"
    }
  },
  "MarketSignalPath": "Data/market_signal.json",
  "SpotPriceHistory": [1.0, 1.01, 0.99, 1.0],
  "TelemetrySchema": {
    "CurrentVersion": 1,
    "MinSupportedVersion": 1,
    "MaxSupportedVersion": 1,
    "OnUnsupported": "drop"
  },
  "TelemetryQueue": {
    "QueueName": "telemetry_data",
    "EnableDeadLettering": true,
    "DeadLetterExchange": "telemetry_dlx",
    "DeadLetterQueueName": "telemetry_data.dlq",
    "DeadLetterRoutingKey": "telemetry_data.dlq",
    "PrefetchCount": 50
  },
  "SchemaRegistry": {
    "Enabled": true,
    "Compatibility": "BACKWARD"
  },
  "ArtifactBaseUrl": "http://localhost:8080",
  "OpenTelemetry": {
    "Enabled": false,
    "ServiceName": "aether-guard-core",
    "OtlpEndpoint": "http://localhost:4317",
    "Protocol": "grpc"
  },
  "Security": {
    "TelemetryApiKey": "",
    "ArtifactApiKey": "",
    "Mtls": {
      "Enabled": false,
      "Port": 8443,
      "AllowHttp": false,
      "HttpPort": 8080,
      "CertificatePath": "",
      "KeyPath": "",
      "BundlePath": "",
      "RequireClientCertificate": true,
      "DisableHttpsRedirection": true,
      "AllowedClientSpiffeIds": []
    }
  },
  "SnapshotRetention": {
    "Enabled": true,
    "SweepIntervalMinutes": 60,
    "MaxAgeDays": 14,
    "MaxSnapshotsPerWorkload": 5,
    "MaxTotalSnapshots": 500,
    "ScanLimit": 2000,
    "ApplyS3Lifecycle": true,
    "S3ExpirationDays": 30
  },
  "ExternalSignals": {
    "Enabled": false,
    "PollingIntervalSeconds": 300,
    "LookbackHours": 48,
    "MaxItemsPerFeed": 200,
    "RetentionDays": 30,
    "CleanupBatchSize": 500,
    "Feeds": [
      {
        "Name": "aws-status",
        "Url": "https://status.aws.amazon.com/rss/all.rss",
        "DefaultRegion": "global"
      },
      {
        "Name": "gcp-status",
        "Url": "https://status.cloud.google.com/en/feed.atom",
        "DefaultRegion": "global"
      },
      {
        "Name": "azure-status",
        "Url": "https://status.azure.com/en-us/status/feed/",
        "DefaultRegion": "global"
      }
    ]
  },
  "MigrationIntervalSeconds": 10,
  "HeartbeatTimeoutSeconds": 60,
  "AllowedHosts": "*"
}
